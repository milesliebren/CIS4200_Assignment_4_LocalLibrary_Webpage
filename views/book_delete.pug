extends layout

block content
  h1 #{title}: #{book.title}
  if book_instances
    h2 There are associated BookInstances. This book cannot be deleted.
    ul
      each bookInstance in book_instances
        li
          a(href=bookInstance.url) #{bookInstance.imprint}
  else
    p Are you sure you want to delete this book?
    form(method='POST' action='')
      div.form-group
        input#bookid.form-control(type='hidden', name='bookid', value=book._id, required='true')
      button.btn.btn-danger(type='submit') Delete
      a.btn.btn-secondary(href=book.url) Cancel