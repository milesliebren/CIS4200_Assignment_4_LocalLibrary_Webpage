extends layout

block content
  h1 #{title}: #{genre.name}

  form(method='POST' action=`/catalog/genre/${genre._id}/update`)
    div.form-group
      label(for='name') Genre Name
      input#name.form-control(type='text', name='name', value=genre.name, required='true')

    button.btn.btn-primary(type='submit') Update